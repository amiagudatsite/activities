---
import Layout from "../layouts/Layout.astro";
import DynamicIcon from "../components/DynamicIcon.astro";
import Button from "../components/Button.astro";
import Arrow from "../components/Arrow.astro";
---
<Layout title="פעילות יום שעות ארוך">
 <div class="w-[150px] mt-0 mb-5 ml-6 mr-0">
  <Button
  className="py-[4px] px-3 flex-row-reverse"
  title="חזרה לקטגוריות"
  href="/"
  >
  <Arrow width={8} height={8} direction="right" />
 </Button>
</div>
  <main>
<div class="mb-4">פעילויות ערים.</div>
    <div class="mb-4">הקליקו על קטגוריה כדי לצפות בפעילויות:</div>
    <div
      role="list"
      class="flex justify-center flex-wrap md:w-[700px] w-full mx-auto">

      <DynamicIcon
      href="https://amiagudatsite.github.io/activities/cities/eilat-city.pdf"
      title="אילת - מידע על העיר"
      subtitle=""
      externalLink={true}
      className="border-b-purple-400"
      icon="../images/eilat.webp"
      />

      <DynamicIcon
      href="https://amiagudatsite.github.io/activities/cities/eilat-pictures.pdf"
      title="אילת - תמונות"
      subtitle=""
      externalLink={false}
      className="border-b-orange-400"
      icon="../images/eilat.webp"
      />

      <DynamicIcon
      href="https://amiagudatsite.github.io/activities/cities/beer-sheva-city.pdf"
      title="באר שבע - מידע על העיר"
      subtitle=""
      externalLink={true}
      className="border-b-haki-400"
      icon="../images/beersheba.jpg"
      />

      <DynamicIcon
      href="https://amiagudatsite.github.io/activities/cities/beer-sheva-pictures.pdf"
      title="באר שבע - תמונות"
      subtitle=""
      externalLink={false}
      className="border-b-green-400"
      icon="../images/beersheba.jpg"
      />

      <DynamicIcon
      href="https://amiagudatsite.github.io/activities/cities/jerusalem-city.pdf"
      title="ירושלים - מידע על העיר"
      subtitle=""
      externalLink={false}
      className="border-b-pink-400"
      icon="../images/jerusalem.webp"
      />

      <DynamicIcon
      href="https://amiagudatsite.github.io/activities/cities/jerusalem-pictures.pdf"
      title="ירושלים - תמונות"
      subtitle=""
      externalLink={true}
      className="border-b-lightBlue-400"
      icon="../images/jerusalem.webp"
      />

      <DynamicIcon
      href="https://amiagudatsite.github.io/activities/cities/tel-aviv-city.pdf"
      title="תל אביב - מידע על העיר"
      subtitle=""
      externalLink={true}
      className="border-b-lightBlue-400"
      icon="../images/telaviv.jpg"
      />

  <DynamicIcon
      href="https://amiagudatsite.github.io/activities/cities/tel-aviv-pictures.pdf"
      title="תל אביב - תמונות"
      subtitle=""
      externalLink={true}
      className="border-b-lightBlue-400"
      icon="../images/telaviv.jpg"
      />

    </div>
  </main>
</Layout>
